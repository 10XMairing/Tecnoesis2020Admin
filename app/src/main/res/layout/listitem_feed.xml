<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/bg_card_50_opac_black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:layout_marginBottom="12dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_feed_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/sky"
            android:layout_marginBottom="@dimen/margin_padding_size_small"
            />

        <TextView
            android:id="@+id/tv_feed_date"
            android:fontFamily="@font/roboto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="23 oct 2:00pm"
            android:textSize="16sp"
            android:textColor="@color/md_grey_400"
            />
        <com.github.tenx.tecnoesis20admin.ui.views.ExpandableTextView
            android:id="@+id/tv_feed_text"
            android:layout_width="match_parent"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/md_grey_200"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:maxLines="4"

            android:paddingEnd="@dimen/margin_padding_size_medium"
            android:linksClickable="true"
            tools:text="@string/lorem_30"
            android:autoLink="web"
            android:textColorLink="@color/md_blue_600"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/margin_padding_size_medium"
            android:text="edit"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:icon="@drawable/ic_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>